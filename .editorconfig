# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
indent_style = tab
indent_size = 4
quote_type = single
ij_typescript_use_double_quotes = false

[*.scss]
indent_style = tab
indent_size = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.yaml]
indent_style = space
